{
  // https://github.com/TypeStrong/ts-node/issues/1953
  "extends": [
    "@tsconfig/recommended/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./types",
    "module": "node16",
    "noEmitOnError": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "target": "es2016"
  },
  "exclude": ["./dist", "./jest.config.js", "./types"]
}
